<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">


        <TextView
            android:id="@+id/v_txt_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Viaje realizado el día 21/02/2017"
            android:textColor="@color/colorCeleste"
            android:textSize="16dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/v_img_btn_map"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            app:srcCompat="@drawable/ic_marcadoralerta" />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorCeleste" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/v_txt_origen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:text="Desde Canelones 1840 - Hora 21:50" />

            <TextView
                android:id="@+id/v_txt_d_hora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorGrisClaro"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Hasta Cuareim 1442 158 3569 sadwe 56- Hora 22:10" />

            <TextView
                android:id="@+id/txt_distanciaRecorrida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Distancia recorrida: 125 km" />

            <TextView
                android:id="@+id/txt_tiempo_demorado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorGrisClaro"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Tiempo: 1 hora 20 minutos" />

        </LinearLayout>


        <TextView
            android:id="@+id/v_txt_Destino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Finalizó el viaje en" />

        <TextView
            android:id="@+id/v_txt_o_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora Finalizado el viaje" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:paddingRight="15dp">

        </LinearLayout>

    </LinearLayout>

</LinearLayout>