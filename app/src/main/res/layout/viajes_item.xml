<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_marcadoralerta"
                android:id="@+id/v_img_btn_map"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_alignBaseline="@+id/v_txt_Destino"
                android:layout_alignBottom="@+id/v_txt_Destino"
                android:layout_toStartOf="@+id/v_img_btn_map" />

            <TextView
                android:text="Hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/v_txt_d_hora"
                android:layout_alignBaseline="@+id/textView5"
                android:layout_alignBottom="@+id/textView5"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="Hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/v_txt_o_hora"
                android:layout_above="@+id/v_txt_Destino"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_alignBaseline="@+id/v_txt_o_hora"
                android:layout_alignBottom="@+id/v_txt_o_hora"
                android:layout_toStartOf="@+id/v_img_btn_map" />

            <TextView
                android:text="Fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/v_txt_fecha"
                android:layout_alignBottom="@+id/v_img_btn_map"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Origen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/v_txt_origen"
                android:layout_marginTop="17dp"
                android:layout_below="@+id/v_txt_fecha"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Destino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/v_txt_Destino"
                android:layout_marginTop="14dp"
                android:layout_below="@+id/v_txt_origen"
                android:layout_alignParentStart="true" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/colorGris"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/v_img_btn_map"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>