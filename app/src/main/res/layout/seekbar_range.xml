<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/your_dialog_root_element"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewwww"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulo de la ubicacion"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textViewwqe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rango" />

        <TextView
            android:id="@+id/textViewasd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2km" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_SeekRango"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="TextView" />

    <SeekBar
        android:id="@+id/sb_rango"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_SeekRango"></SeekBar>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_Alarma_Aceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:text="Aceptar"></Button>

        <Button
            android:id="@+id/btn_Alarma_Eliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/btn_Alarma_Aceptar"
            android:text="Eliminar" />

    </LinearLayout>

</LinearLayout>